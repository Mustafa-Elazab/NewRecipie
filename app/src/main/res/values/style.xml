<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="regularTextBold">
        <item name="android:textSize">
            @dimen/_14ssp
        </item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/custom_color_text_primary</item>

    </style>

    <style name="AppBarLayoutTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/purple_700</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TextBold">
        <item name="android:textSize">
            @dimen/_20ssp
        </item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/custom_color_text_primary</item>

    </style>

    <style name="regularText">
        <item name="android:textSize">
            @dimen/_14ssp
        </item>

        <item name="color">@color/custom_color_text_primary</item>

    </style>

    <style name="bigTextBold">
        <item name="android:textSize">
            @dimen/_32ssp
        </item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/custom_color_text_primary</item>

    </style>
</resources>